{
  "tables": [
    {
      "name": "people_info",
      "description": "Holds detailed personal demographic information of individuals.",
      "columns": [
        { "name": "person_id", "type": "integer", "description": "Unique identifier for the person." },
        { "name": "ssn", "type": "string", "description": "Social Security Number." },
        { "name": "full_name", "type": "string", "description": "Full legal name of the person." },
        { "name": "birth_date", "type": "date", "description": "Date of birth." },
        { "name": "age", "type": "integer", "description": "Current age." },
        { "name": "death_date", "type": "date", "description": "Date of death, if applicable." },
        { "name": "address_line1", "type": "string", "description": "Primary address line." },
        { "name": "address_line2", "type": "string", "description": "Secondary address line." },
        { "name": "address_line3", "type": "string", "description": "Tertiary address line." },
        { "name": "city", "type": "string", "description": "City of residence." },
        { "name": "county", "type": "string", "description": "County of residence." },
        { "name": "zip_code", "type": "string", "description": "ZIP/postal code." },
        { "name": "birth_sex", "type": "string", "description": "Sex assigned at birth (M/F/U)." },
        { "name": "current_sex", "type": "string", "description": "Current gender (M/F/U)." },
        { "name": "status", "type": "string", "description": "Active or Inactive status (A/I)." },
        { "name": "company_id", "type": "integer", "description": "Linked company ID." }
      ],
      "identification_fields": ["person_id", "ssn"],
      "date_fields": ["birth_date", "death_date"]
    },
    {
      "name": "medical_staff",
      "description": "Contains information about medical professionals.",
      "columns": [
        { "name": "staff_id", "type": "integer", "description": "Unique ID for medical staff." },
        { "name": "full_name", "type": "string", "description": "Staff's full name." },
        { "name": "specialty", "type": "string", "description": "Specialty area." },
        { "name": "role", "type": "string", "description": "Role of the staff (e.g. Physician)." },
        { "name": "department", "type": "string", "description": "Department assigned." },
        { "name": "status", "type": "string", "description": "Status (A/I)." },
        { "name": "company_id", "type": "integer", "description": "Company affiliation." },
        { "name": "created_on", "type": "datetime", "description": "Record creation date." }
      ],
      "identification_fields": ["staff_id"],
      "date_fields": ["created_on"]
    },
    {
      "name": "patient_profile",
      "description": "Links a person to a patient record.",
      "columns": [
        { "name": "patient_id", "type": "integer", "description": "Unique patient ID." },
        { "name": "person_id", "type": "integer", "description": "Foreign key to person_info." },
        { "name": "full_name", "type": "string", "description": "Patient's full name." },
        { "name": "primary_physician_id", "type": "integer", "description": "Primary physician's staff ID." },
        { "name": "guarantor_id", "type": "integer", "description": "Guarantor ID for billing." },
        { "name": "active_status", "type": "string", "description": "Active (A) or Inactive (I) status." },
        { "name": "created_on", "type": "datetime", "description": "Profile creation date." }
      ],
      "identification_fields": ["patient_id"],
      "date_fields": ["created_on"]
    },
    {
      "name": "visit_details",
      "description": "Holds visit/admission details for each patient.",
      "columns": [
        { "name": "visit_id", "type": "integer", "description": "Unique ID of the visit." },
        { "name": "patient_id", "type": "integer", "description": "Foreign key to patient_profile." },
        { "name": "visit_number", "type": "integer", "description": "Visit number." },
        { "name": "patient_name", "type": "string", "description": "Patient's name." },
        { "name": "admission_time", "type": "datetime", "description": "Admission timestamp." },
        { "name": "discharge_time", "type": "datetime", "description": "Discharge timestamp." },
        { "name": "admission_status", "type": "string", "description": "Status on admission (Y/N/T/I/C)." },
        { "name": "length_of_stay", "type": "integer", "description": "Total length of stay in days." },
        { "name": "care_type_id", "type": "integer", "description": "Type of care provided." },
        { "name": "admitting_company_id", "type": "integer", "description": "Company responsible for admission." },
        { "name": "facility_id", "type": "integer", "description": "Facility where admitted." },
        { "name": "bed_id", "type": "integer", "description": "Assigned bed ID." },
        { "name": "insurance_id", "type": "integer", "description": "Insurance used for visit." },
        { "name": "finance_class_id", "type": "integer", "description": "Finance classification ID." },
        { "name": "primary_physician_id", "type": "integer", "description": "Primary physician ID." },
        { "name": "attending_doctor_id", "type": "integer", "description": "Attending doctor ID." },
        { "name": "admit_diagnosis", "type": "string", "description": "Diagnosis at the time of admission." }
      ],
      "identification_fields": ["visit_id"],
      "date_fields": ["admission_time", "discharge_time"]
    },
    {
      "name": "diseases",
      "description": "Contains master list of diseases with codes and descriptions.",
      "columns": [
        { "name": "disease_id", "type": "integer", "description": "Unique ID for disease." },
        { "name": "code", "type": "string", "description": "Disease code (e.g., ICD-10)." },
        { "name": "name", "type": "string", "description": "Disease name." },
        { "name": "description", "type": "string", "description": "Detailed description of the disease." },
        { "name": "status", "type": "string", "description": "Status (A/I)." },
        { "name": "created_on", "type": "datetime", "description": "Record creation date." }
      ],
      "identification_fields": ["disease_id", "code"],
      "date_fields": ["created_on"]
    },
    {
      "name": "medications",
      "description": "Stores available medications, formulations, and pricing.",
      "columns": [
        { "name": "medication_id", "type": "integer", "description": "Unique medication ID." },
        { "name": "brand_name", "type": "string", "description": "Brand name of the drug." },
        { "name": "generic_name", "type": "string", "description": "Generic compound name." },
        { "name": "medication_code", "type": "string", "description": "Unique medication code." },
        { "name": "type", "type": "string", "description": "Form type (Tablet, Syrup, etc.)." },
        { "name": "dosage_form", "type": "string", "description": "Dosage value and units." },
        { "name": "price_per_unit", "type": "integer", "description": "Cost per unit." },
        { "name": "status", "type": "string", "description": "Status (A/I)." },
        { "name": "created_on", "type": "datetime", "description": "Creation timestamp." }
      ],
      "identification_fields": ["medication_id", "medication_code"],
      "date_fields": ["created_on"]
    }
  ],
  "relationships": [
    { "from_table": "people_info", "from_column": "person_id", "to_table": "patient_profile", "to_column": "person_id", "relationship": "one-to-one" },
    { "from_table": "patient_profile", "from_column": "patient_id", "to_table": "visit_details", "to_column": "patient_id", "relationship": "one-to-many" },
    { "from_table": "medical_staff", "from_column": "staff_id", "to_table": "visit_details", "to_column": "attending_doctor_id", "relationship": "one-to-many" }
  ]
}
